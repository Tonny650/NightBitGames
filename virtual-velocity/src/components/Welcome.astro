---
import logo from "../assets/BlackLogoNoBG.svg";
import nwebanner from "../assets/banner.jpg";
const banner = "https://picsum.photos/2000/850";
---

<div>
  <nav class="bg-black/20 fixed top-0 left-0 w-full z-40 px-10 py-4">
    <div
      class="mx-w-screen-xl flex flex-wrap items-center justify-between mx-auto"
    >
      <a
        href="https://nightbitgames.com/"
        class="flex flex-items-center space-x-6 rtl:space-x-reverse"
      >
        <img src={logo.src} class="h-15" alt="Tiny Logo" />
        <span
          class="self-center text-m font-semibold whitespace-nowrap dark:text-white font-[lexend]"
          >NightBit Games</span
        >
      </a>
      <button
        data-collapse-toggle="navbar-default"
        type="button"
        class="inline-flex items-center w-10 h-10 justify-center test-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-100/30 dark:focus:ring-white"
        aria-controls="navbar-default"
        aria-expanded="false"
      >
        <span class="sr-only">Open main menu</span>
        <svg
          class="w-5 h-5"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 17 14"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M1 1h15M1 7h15M1 13h15"></path>
        </svg>
      </button>
      <div class="hidden w-full md:block md:w-auto" id="navbar-default">
        <ul class="font-medium flex flex-col md:flex-row md:space-x-10 text-m">
          <li>
            <a
              href="https://nightbitgames.com/"
              class="block py-2 px-3 text-orange-400 rounded-sm hover:bg-orange-400 md:hover:bg-transparent md:border-0 md:hover:text-orange-400 md:p-0 dark:text-white md:dark:hover:text-orange-400 dark:hover:bg-orange-400 dark:hover:text-white md:dark:hover:bg-transparent font-[Roboto Flex]"
              aria-current="page">Home</a
            >
          </li>
          <li>
            <a
              href="#"
              class="block py-2 px-3 text-orange-400 rounded-sm hover:bg-orange-400 md:hover:bg-transparent md:border-0 md:hover:text-orange-400 md:p-0 dark:text-white md:dark:hover:text-orange-400 dark:hover:bg-orange-400 dark:hover:text-white md:dark:hover:bg-transparent font-[Roboto Flex]"
              >About</a
            >
          </li>
          <li>
            <a
              href="#"
              class="block py-2 px-3 text-orange-400 rounded-sm hover:bg-orange-400 md:hover:bg-transparent md:border-0 md:hover:text-orange-400 md:p-0 dark:text-white md:dark:hover:text-orange-400 dark:hover:bg-orange-400 dark:hover:text-white md:dark:hover:bg-transparent font-[Roboto Flex]"
              >Services</a
            >
          </li>
          <li>
            <a
              href="#"
              class="block py-2 px-3 text-orange-400 rounded-sm hover:bg-orange-400 md:hover:bg-transparent md:border-0 md:hover:text-orange-400 md:p-0 dark:text-white md:dark:hover:text-orange-400 dark:hover:bg-orange-400 dark:hover:text-white md:dark:hover:bg-transparent font-[Roboto Flex]"
              >Pricing</a
            >
          </li>
          <li>
            <a
              href="#"
              class="block py-2 px-3 text-orange-400 rounded-sm hover:bg-orange-400 md:hover:bg-transparent md:border-0 md:hover:text-orange-400 md:p-0 dark:text-white md:dark:hover:text-orange-400 dark:hover:bg-orange-400 dark:hover:text-white md:dark:hover:bg-transparent font-[Roboto Flex]"
              >Contact</a
            >
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <div></div>
  <div class="relative w-full h-150">
    <img src={banner} alt="gameplay" />
    <div class="absolute inset-0 flex flex-col items-center justify-center z-20">
      <img src={logo.src} class="h-50 mb-5" />
      <p class="text-white text-4xl font-semibold font-[lexend] mb-3">NightBit Games</p>
      <p class="text-white text-m">Developing incredible experiences</p>
    </div>
  </div>
